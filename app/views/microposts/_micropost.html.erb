<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_index_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
     <%= t "micropost.time",time: (time_ago_in_words micropost.created_at) %>
     <%= link_to t("micropost.delete"), micropost, method: :delete,
       data: {confirm: t("micropost.cfm")} if current_user?(micropost.user) %>
  </span>
</li>
